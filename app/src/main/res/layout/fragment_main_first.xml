<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lin_queue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/btn_box_selector_one"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/main_queue"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_ticket"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/btn_box_selector_two"
        android:layout_gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/main_ticket"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
